#!/bin/sh

if [ "$1" = "-h" ]; then
    cat <<EOF
Usage: ${0##*/}

Clean various running processes. Run it before exiting a session.

EOF
    exit
fi

echo "Emacs" >&2
command -v emacsclient >/dev/null 2>&1 && emacsclient -e '(kill-emacs)' >/dev/null 2>&1

echo "SSH" >&2
[ -n "$SSH_AGENT_PID" ] && eval "$(ssh-agent -k)"
