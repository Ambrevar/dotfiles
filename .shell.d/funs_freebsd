port-list()
{
        pkg_info | cut -f1 -d' '
}

port-size()
{
    pkg_info -Qsb "$@" | sed 's/\([^:]*\):\(.*\)/\2 KiB	\1/g'
}

mcd()
{
    local DEST=$(pkg_search -r "$@" | head -n1 | awk '{print $2}')
    cd "$DEST"
}
