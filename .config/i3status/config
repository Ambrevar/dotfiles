# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	interval = 5
}

order += "battery 0"
order += "volume master"
order += "volume PCM"
order += "cpu_usage"
order += "load"
order += "tztime local"

battery 0 {
	format = "%status %percentage %remaining"
	last_full_capacity = false
	integer_battery_capacity = true
}

tztime local {
	format = "%a %d %b %H:%M"
}

load {
	format = "%1min"
}

cpu_usage {
	format = "CPU %usage"
}

volume master {
	format = "♪ %volume"
	format_muted = "♪ (%volume)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}


volume PCM {
	format = "♪ PCM %volume"
	format_muted = "♪ PCM (%volume)"
	device = "default"
	mixer = "PCM"
	mixer_idx = 0
}
